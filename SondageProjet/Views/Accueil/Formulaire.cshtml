@using SondageProjet.Models
@{
    ViewBag.Title = "Formulaire Creation d'un Sondage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Formulaire</h1>
<div>
    <form action="@Url.Action("CreationSondage")" method="post">
        

   
  
        <div class="form-group row" style="background-color:#aaa;">
            <label for="question" class="col-sm-2 col-form-label">Question</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="question" placeholder="Veuillez saisir ici votre question">
            </div>
        </div>
        <div class="form-group row" style="background-color:#ddd;">
            <label for="choix1" class="col-sm-2 col-form-label">Choix 1</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="choix1" placeholder="Veuillez saisir le Choix 1">
            </div>
        </div>
        <div class="form-group row" style="background-color:#aaa;">
            <label for="choix2" class="col-sm-2 col-form-label">Choix 2</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="choix2" placeholder="Veuillez saisir le Choix 2">
            </div>
        </div>
        <div class="form-group row" style="background-color:#ddd;">
            <label for="choix3" class="col-sm-2 col-form-label">Choix 3</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="choix3" placeholder="Veuillez saisir le Choix 3">
            </div>
        </div>
        <div class="form-group row" style="background-color:#aaa;">
            <label for="choix4" class="col-sm-2 col-form-label">Choix 4</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="choix4" placeholder="Veuillez saisir le Choix 4">
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">

                <div class="col-sm-10">

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="isChoixMultiple" id="isChoixMultiple" value="true">
                        <label class="form-check-label" for="gridRadios2">
                            Reponse multiple
                        </label>
                    </div>
                   
                </div>
            </div>
        </fieldset>

        <div class="form-group row">
            <div class="col-sm-10">

                <input type="submit" class="btn btn-primary" value="Créer le sondage" />
                

            </div>
        </div>
    </form>

</div>
